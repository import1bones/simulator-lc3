{
    // General Editor Settings
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": true,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.trimAutoWhitespace": true,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    
    // C++ Settings
    "C_Cpp.default.cppStandard": "c++17",
    "C_Cpp.default.cStandard": "c17",
    "C_Cpp.default.intelliSenseMode": "macos-clang-x64",
    "C_Cpp.default.compilerPath": "/usr/bin/clang++",
    "C_Cpp.clang_format_style": "{ BasedOnStyle: LLVM, IndentWidth: 4, TabWidth: 4, UseTab: Never, ColumnLimit: 80, AccessModifierOffset: -2, NamespaceIndentation: None }",
    "C_Cpp.clang_format_fallbackStyle": "LLVM",
    "C_Cpp.formatting": "clangFormat",
    "C_Cpp.autocomplete": "default",
    "C_Cpp.errorSquiggles": "enabled",
    "C_Cpp.intelliSenseEngine": "default",
    "C_Cpp.enhancedColorization": "enabled",
    "C_Cpp.autocompleteAddParentheses": true,
    
    // CMake Settings
    "cmake.configureOnOpen": true,
    "cmake.buildBeforeRun": true,
    "cmake.clearOutputBeforeBuild": true,
    "cmake.configureSettings": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_PYTHON_BINDINGS": "ON"
    },
    "cmake.buildDirectory": "${workspaceFolder}/build",
    "cmake.installPrefix": "${workspaceFolder}/install",
    "cmake.generator": "Unix Makefiles",
    
    // Python Settings
    "python.defaultInterpreterPath": "/usr/bin/python3",
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.linting.flake8Enabled": true,
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": ["--line-length=88"],
    "python.testing.pytestEnabled": true,
    "python.testing.pytestPath": "pytest",
    "python.testing.pytestArgs": ["tests"],
    "python.testing.unittestEnabled": false,
    "python.testing.autoTestDiscoverOnSaveEnabled": true,
    
    // File Associations
    "files.associations": {
        "*.h": "c",
        "*.cpp": "cpp",
        "*.hpp": "cpp",
        "*.c": "c",
        "CMakeLists.txt": "cmake",
        "*.cmake": "cmake"
    },
    
    // Search Exclusions
    "search.exclude": {
        "**/build/**": true,
        "**/install/**": true,
        "**/.git/**": true,
        "**/node_modules/**": true,
        "**/__pycache__/**": true,
        "**/*.pyc": true,
        "**/htmlcov/**": true,
        "**/.pytest_cache/**": true
    },
    
    // File Watcher Exclusions
    "files.watcherExclude": {
        "**/build/**": true,
        "**/install/**": true,
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true,
        "**/__pycache__/**": true,
        "**/htmlcov/**": true,
        "**/.pytest_cache/**": true
    },
    
    // Git Settings
    "git.ignoreLimitWarning": true,
    
    // Terminal Settings
    "terminal.integrated.defaultProfile.osx": "zsh",
    "terminal.integrated.cwd": "${workspaceFolder}",
    
    // Problem Matcher Settings
    "problemMatcher.fileLocation.relative": "${workspaceFolder}",
    
    // Extension Settings
    "clangd.arguments": [
        "--compile-commands-dir=${workspaceFolder}/build",
        "--background-index",
        "--clang-tidy",
        "--completion-style=detailed"
    ]
}
